<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="8dp"
    android:paddingTop="0dp"
    app:cardCornerRadius="2dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius_bottom_left="0dp"
            app:riv_corner_radius_bottom_right="0dp"
            app:riv_corner_radius_top_left="2dp"
            app:riv_corner_radius_top_right="2dp" />
        <TextView
            android:id="@+id/title_text"
            android:layout_marginTop="@dimen/card_title_margin_top"
            android:layout_marginLeft="@dimen/card_content_side_margin"
            android:layout_marginRight="@dimen/card_content_side_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_below="@+id/bannerImage"
            android:textSize="24sp"
            android:text="Testing text"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_marginLeft="@dimen/card_content_side_margin"

            android:layout_width="@dimen/circle_image_icon_side_small"
            android:layout_height="@dimen/circle_image_icon_side_small"
            android:src="@color/accent"
            app:civ_border_width="2dp"
            android:layout_marginRight="8dp"
            app:civ_border_color="#00000000"
            android:layout_below="@+id/title_text"/>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/shareButton"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/favButton"
            android:layout_marginRight="8dp"
            android:layout_below="@id/title_text"
            android:layout_width="@dimen/fav_icon_size"
            android:layout_height="@dimen/fav_icon_size"
            android:src="@android:drawable/ic_menu_share"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/favButton"
            android:layout_marginRight="@dimen/card_content_side_margin"
            android:soundEffectsEnabled="true"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title_text"
            android:layout_width="@dimen/fav_icon_size"
            android:layout_height="@dimen/fav_icon_size"
            android:src="@drawable/heartgrey"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_text"
            android:layout_toRightOf="@+id/profile_pic"
            android:text="Username"
            android:textSize="14sp"
            android:layout_below="@id/title_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/timestamp_text"
            android:layout_toRightOf="@+id/profile_pic"
            android:text="2 hours"
            android:layout_marginTop="4sp"
            android:textSize="14sp"
            android:layout_below="@id/username_text" />



        <TextView
            android:layout_marginLeft="@dimen/card_content_side_margin"
            android:layout_marginRight="@dimen/card_content_side_margin"

            android:id="@+id/fact_content_text"
            android:layout_below="@+id/profile_pic"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="#000000"
            android:lineSpacingExtra="4dp"
            android:maxLines="5"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/action_divider"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@+id/fact_content_text"
            android:background="#E6E6E6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showMoreText"
            android:text="SHOW MORE"
            android:layout_marginLeft="@dimen/card_content_side_margin"
            android:layout_below="@+id/action_divider"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/accent"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>
